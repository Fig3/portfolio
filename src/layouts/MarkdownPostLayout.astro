---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <p class="mt-2">{frontmatter.pubDate.toString().slice(0, 10)}</p>
  <p class="mt-2">
    <em>{frontmatter.description}</em>
  </p>
  <p class="mt-2">カテゴリ: {frontmatter.category}</p>
  <img
    class="mt-2"
    src={frontmatter.image.url}
    width="300"
    alt={frontmatter.image.alt}
  />
  <div class="mt-4 prose max-w-none dark:prose-invert">
    <slot />
  </div>
  <div class="mt-4 flex flex-wrap">
    {
      frontmatter.tags.map((tag) => (
        <p class="px-1 m-1 bg-[#fffff0] border border-black dark:bg-[#14142b] dark:border-white hover:bg-[#f6c445] focus:bg-[#f6c445] dark:hover:bg-[#f6c445] dark:focus:bg-[#f6c445]">
          <a href={`/tags/${tag}/`}>{tag}</a>
        </p>
      ))
    }
  </div>
</BaseLayout>
