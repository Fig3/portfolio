---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="mt-2">
    <a
      class="block hover:text-[#f6c445] focus:text-[#f6c445] md:inline-block"
      href=`/category/${frontmatter.category}`
      >CATEGORY &gt; {frontmatter.category}</a
    >
  </div>
  <div class="mt-2">
    公開: {frontmatter.pubDate.toString().slice(0, 10)} &emsp; 更新: {
      frontmatter.lastUpdatedDate.toString().slice(0, 10)
    }
  </div>
  <div class="mt-2">
    <em> {frontmatter.description}</em>
  </div>
  <div class="mt-8 text-center">
    <img
      class="mx-auto"
      src={frontmatter.image.url}
      width="300"
      alt={frontmatter.image.alt}
    />
  </div>
  <div class="mt-6 prose max-w-none dark:prose-invert">
    <slot />
  </div>
  <div class="mt-10 flex flex-wrap">
    {
      frontmatter.tags.map((tag) => (
        <p class="px-1 m-1 bg-[#fffff0] border border-black dark:bg-[#14142b] dark:border-white hover:bg-[#f6c445] focus:bg-[#f6c445] dark:hover:bg-[#f6c445] dark:focus:bg-[#f6c445]">
          <a href={`/tags/${tag}/`}>{tag}</a>
        </p>
      ))
    }
  </div>
</BaseLayout>
