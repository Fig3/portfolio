---
const { platform, username } = Astro.props;
---

<a
  href={`https://www.${platform}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer">{platform}</a
>

<style>
  a {
    padding: 0.5rem 1rem;
    background-color: #ffc800;
    font-weight: bold;
    text-decoration: none;
  }
</style>
