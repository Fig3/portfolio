---
const { platform, username } = Astro.props;
---

<a
  href={`https://www.${platform}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer">{platform}</a
>

<style>
  a {
    padding: 0.5rem 1rem;
    font-size: 1.2rem;
    font-weight: bold;
    text-decoration: none;
  }
  a:hover,
  a:focus {
    background-color: #f6c445;
  }
</style>
